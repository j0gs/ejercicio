{% extends 'base.html.twig' %}

{% block body %}
    <h1>Address</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ address.id }}</td>
            </tr>
            <tr>
                <th>Calle</th>
                <td>{{ address.calle }}</td>
            </tr>
            <tr>
                <th>Colonia</th>
                <td>{{ address.colonia }}</td>
            </tr>
            <tr>
                <th>Delegacion</th>
                <td>{{ address.delegacion }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ address.numero }}</td>
            </tr>
            <tr>
                <th>Persona</th>
                <td>{{ address.people }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('direccion_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('direccion_edit', { 'id': address.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
